<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pilot.ShortcutFormPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="11*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <StackLayout Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Margin="50" x:Name="FormStackLayout">
                <Label Text="Nazwa:" HorizontalTextAlignment="Center" />
                <Entry Placeholder="" x:Name="TextEntry" IsSpellCheckEnabled="False" />
                <Label Text="Adres WWW:" HorizontalTextAlignment="Center" />
                <Entry Placeholder="www.example.com lub example.com" PlaceholderColor="Gray" x:Name="WWWAddressEntry" IsSpellCheckEnabled="False" />
            </StackLayout>
            <Button Grid.Column="0" Grid.Row="1" x:Name="BackButton" Text="Wstecz" Clicked="BackButton_Clicked" />
            <Button Grid.Column="1" Grid.Row="1" x:Name="AcceptButton" Text="Dodaj" Clicked="AcceptButton_Clicked" />
        </Grid>
    </ContentPage.Content>
</ContentPage>